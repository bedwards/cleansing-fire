# =============================================================================
# Cleansing Fire — Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env — it's in .gitignore.
# =============================================================================

# --- Anthropic (Claude Code orchestrator) ---
ANTHROPIC_API_KEY=

# --- Data Source API Keys ---
# FEC campaign finance (free: api.open.fec.gov)
FEC_API_KEY=DEMO_KEY

# LegiScan legislation tracking (free tier: legiscan.com)
LEGISCAN_API_KEY=

# OpenSecrets lobbying data (free: opensecrets.org/api)
OPENSECRETS_API_KEY=

# NewsAPI news monitoring (newsapi.org)
NEWSAPI_KEY=

# Mediastack news monitoring (mediastack.com)
MEDIASTACK_KEY=

# --- Social Distribution ---
# Bluesky (bsky.social)
BLUESKY_HANDLE=
BLUESKY_APP_PASSWORD=
BLUESKY_SERVICE=https://bsky.social

# Mastodon
MASTODON_INSTANCE=
MASTODON_ACCESS_TOKEN=

# --- Local Services ---
# Gatekeeper LLM daemon (default: http://127.0.0.1:7800)
CF_GATEKEEPER_URL=http://127.0.0.1:7800

# FireWire federation daemon (default: http://127.0.0.1:7801)
FIREWIRE_URL=http://127.0.0.1:7801

# Tor SOCKS proxy for anonymous submissions
TOR_SOCKS_PROXY=socks5h://127.0.0.1:9050

# --- SEC EDGAR ---
# User agent for SEC EDGAR (required, format: "Name email@example.com")
SEC_EDGAR_USER_AGENT=

# --- Cloudflare (for worker deployment) ---
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ACCOUNT_ID=

# --- Project ---
CF_PROJECT_DIR=
